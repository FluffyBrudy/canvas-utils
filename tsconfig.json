{
  "compilerOptions": {
    "target": "ES2022",                    
    "module": "ESNext",                    
    "lib": ["ES2022", "DOM"],              
    "moduleResolution": "node",            
    "declaration": true,                   
    "declarationMap": true,                
    "outDir": "dist",                      
    "rootDir": "src",                      
    "esModuleInterop": true,               
    "strict": true,                        
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "skipLibCheck": true                   
  },
  "include": ["src"]
}
